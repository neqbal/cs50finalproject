{% extends "layout01.py.jinja" %}

{% block title %}
    My Profile
{% endblock %}

{% block main %}
     <div class="main-body-top">
        <div class="user-name" style="display: flex; flex-direction: row; align-items: center; padding-left: 2px;" >
            <p class="Name" style="color: black; padding: 3px 0px 3px 3px;">{{ name["name"] }}</p>
            <p class="username" style="color: black; padding: 3px 0px 3px 3px;">{{ "@" ~ name["username"] }}</p>
        </div>
        <div class="main-body-top-container">
            <div class="myposts">
                <a href="/myprofile?myprofile=myposts">My posts</a>
            </div>
            <div class="likedposts">
                <a href="/myprofile?myprofile=likedposts">Liked</a>
            </div>
            <div class="comments">
               <a href="/myprofile?myprofile=comments">Comments</a>
            </div>
        </div>
        <div class="temp" style="width: 64px;" ></div>
    </div>

    <div class="main-body-middle" id="middle-container">
        {% if post_data is defined %}
        <div class="main-body-middle-post-container">
            {% for i in post_data %}
            <div class="posts" id="post{{ i["post_id"] }}">
                <div class="post-box-1">
                    <div class="box-1-item-1">
                        <p class="Name" style="color: rgb(0, 0, 0);">{{ i["name"] }}</p>
                        <p class="username" style="color: rgb(255, 0, 0);">{{ "@" ~ i["username"] }}</p>
                    </div>
